<Page x:Class="WpfApp1.MyPages.StartWindowPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1.MyPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StartWindowPage">

    <Grid>
        <StackPanel>
            <TextBlock HorizontalAlignment="Center" FontSize="24" Foreground="White" Width="60" Margin="0,50,0,0" Height="38">Игра</TextBlock>
            <StackPanel Width="400" Margin="0,80,0,0">
                <Button Name="StartGame" Background="{x:Null}" BorderBrush="Black" Margin="10" Padding="10" Width="150">Играть</Button>
                <Button Name="StartSetings" Background="{x:Null}" BorderBrush="Black" Margin="10" Padding="10" Width="150" Click="StartSetings_Click">Настройки</Button>
                <Button Name="Output" Background="{x:Null}" BorderBrush="Black" Margin="10" Padding="10" Width="150" Click="Output_Click">Выход</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
